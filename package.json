{
  "name": "react-express-ts-starter-root",
  "private": true,
  "engines": { "node": ">=24" },
  "scripts": {
    "dev": "npm-run-all --parallel dev:client dev:server",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "build": "npm-run-all build:client build:server",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "test": "npm-run-all --continue-on-error test:client test:server",
    "test:client": "cd client && npm test",
    "test:server": "cd server && npm test",
    "lint": "npm-run-all lint:client lint:server",
    "lint:client": "cd client && npm run lint",
    "lint:server": "cd server && npm run lint"
  },
  "bugs": {
    "url": "https://github.com/Dellrodar/React-express-typescript-template/issues"
  },
  "homepage": "https://github.com/Dellrodar/React-express-typescript-template#readme",
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
